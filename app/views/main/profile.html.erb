<%= link_to 'Edit your profile', edit_user_registration_path(current_user), class: "btn btn-primary pull-right" %>

<% @users.each do |user| %>
  <h3>Welcome to your profile <%= user.name %></h3>
<% end %>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %> <br>

<ul class="list-group">
  <% @users.each do |user| %>
    <li class="list-group-item"><span class="glyphicon glyphicon-ice-lolly-tasted" aria-hidden="true"></span>Name:       <%= user.name %> </li>
    <li class="list-group-item"><span class="glyphicon glyphicon-ice-lolly-tasted" aria-hidden="true"></span>Gender:     <%= user.gender %> </li>
    <li class="list-group-item"><span class="glyphicon glyphicon-ice-lolly-tasted" aria-hidden="true"></span>Location:   <%= user.location %> </li>
    <li class="list-group-item"><span class="glyphicon glyphicon-ice-lolly-tasted" aria-hidden="true"></span>Biography:  <%= user.description %> </li>
    <li class="list-group-item"><%= image_tag user.avatar.url, class: "img-responsive"  %></li>
  <% end %>
</ul>
